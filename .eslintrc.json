{
	"parser": "@babel/eslint-parser",
	"parserOptions": {
		"ecmaVersion": 2022,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		},
	},
	"plugins": [
		"react"
	],
	"rules": {
		"indent": ["error", "tab"],
		"space-infix-ops": ["error", {"int32Hint": false}],
		"no-unused-vars": ["warn"],
		"no-console": ["warn", { "allow": ["warn", "error", "info"] }],
		"react/prop-types": ["warn"],
		"react/jsx-uses-react": "error",
		"react/jsx-uses-vars": "error"
	}
}